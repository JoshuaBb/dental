FROM rust:1.85-bookworm AS builder

WORKDIR /app
COPY Cargo.toml Cargo.lock ./
COPY proto/ proto/
COPY crates/ crates/

RUN cargo build --release --bin dental-server

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/dental-server /usr/local/bin/dental-server

EXPOSE 50051

CMD ["dental-server"]
